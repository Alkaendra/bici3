= form_for @categorium do |f|
  - if @categorium.errors.any?
    #error_explanation
      %h2= "#{pluralize(@categorium.errors.count, "error")} prohibited this categorium from being saved:"
      %ul
        - @categorium.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :titulo
    = f.text_field :titulo
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :descripcion
    = f.text_area :descripcion
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :meta_descripcion
    = f.text_field :meta_descripcion
  .field
    = f.label :featured
    = f.check_box :featured
  .actions
    = f.submit 'Save'
