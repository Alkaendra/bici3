

 <div class="col-sm-3 col-md-3 col-lg-3">
  <div class="item"><!-- Portfolio Item #1 -->
    <div class="hover-bg">
      <div class="hover-text off">
        <h4><%= project.title %></h4>
        <br>
        <p><%= project.description %></p>
      <!--  <a class="read-more" href="project-particular.html">Ver producto <span class="fa fa-chevron-circle-right"></span></a>-->
      </div>
      <% unless project.image.blank? %>
      <a data-toggle="modal" data-target="#imageModal_<%= project.id %>" href="#">
        <div class="post_image">
          <%= image_tag project.image.url(:thumb), :class => 'media-object' %>
        </div>
      </a>

    </div>
  </div>
</div>


  <div class="modal fade" id="imageModal_<%= project.id %>" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <%= image_tag project.image.url(:normal), :class => 'media-object' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
