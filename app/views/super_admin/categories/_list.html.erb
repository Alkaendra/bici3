<% for @category in @categories %>
	<div class="module_item">
		<div class="item_id">
			<p><%= @category.id %></p>
		</div>
		<div class="item_name">
			<%= link_to @category.title, :controller => 'super_admin/categories', :action => 'edit', :id => @category.id%>
		</div>
		<div class="item_pid">
			<p><%= @category.parent_id %></p>
		</div>		
		<div class="module_item_actions">
