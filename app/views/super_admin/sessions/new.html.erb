<%= form_for(resource, as: resource_name, url: session_path(resource_name),  :html => { :class => "form-signin", :role => "form" }) do |f| %>
	<h2 class="form-signin-heading">AdminControl</h2>
	<div class="form-group">
	  <%= f.text_field :email, :class => 'form-control', :placeholder => 'E-mail Address' %>
	  <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password' %>
	</div>
	<div class="form-group">
	  <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %> Remember me
	</div>
	<div class="form-group">
    <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block' %>


  	<%= render "devise/shared/links" %>
  </div>
<% end %>
